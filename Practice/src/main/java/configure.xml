<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<context:component-scan base-package="com.priya"></context:component-scan>
<bean id="redmi" class="com.priya.Redmi">
	<constructor-arg name="ram" value="12"></constructor-arg>
	<constructor-arg name="storage" value="256"></constructor-arg>
</bean>
</beans>